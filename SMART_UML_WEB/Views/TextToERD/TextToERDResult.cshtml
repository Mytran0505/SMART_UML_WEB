@model string

<form method="post" action="/TextToERD/GenerateUML">
    <textarea name="umlText" rows="10" cols="50">@Model</textarea>
    <br />
    <button type="submit">Generate UML</button>
</form>

@if (!string.IsNullOrEmpty(Model))
{
    <h2>Generated UML:</h2>
    <img src="@Url.Action("GenerateUML", "TextToERD", new { umlText = Model })" alt="Generated UML" />
}
