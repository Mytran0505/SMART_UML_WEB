<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TestERD</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/loading_icon.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/public/client/styles.css" asp-append-version="true" />
</head>
<body style="background-image: linear-gradient(to right, rgba(226, 234, 244, 0.4) 0 100%), url(/images/background_image.jpg);">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SmartUML</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
@*                     <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="TextToERD" asp-action="Index">Test TextToERD</a>
                        </li>
                    </ul> *@
                </div>
                <div class="d-flex align-items-center">
                    <img src="~/images/avatar.jpg" alt="Profile" class="border border-info rounded-circle" width="40" height="40">
                    <span class="ms-2">Tran, Nguyen...</span>
                </div>
            </div>
        </nav>
    </header>
    <div class="main mb-5">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top text-muted">
        <div class="d-flex align-items-center justify-content-center mt-2" style="color:whitesmoke">
            &copy; 2024 - SmartUML - Khóa luận tốt nghiệp
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
